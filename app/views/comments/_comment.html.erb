<div class="comment columns" id="comment-<%= comment.id %>">
    <div class="column is-2 is-align-self-center">
        <figure class="image is-24x24 is-pulled-right">
            <%= link_to comment.user do %>
                <% if comment.user.avatar.attached? %>
                    <%= cl_image_tag comment.user.avatar.key, :width => 50, :crop => "fill", alt: 'Placeholder Image', class: 'is-rounded' %>
                <% else %>
                    <%= image_tag "https://bulma.io/images/placeholders/128x128.png", alt: 'Placeholder Image', class: 'is-rounded' %>
                <% end %>
            <% end %>
        </figure>
    </div>
    <div class="column is-9">
        <p><%=  link_to comment.user.name, comment.user %></p>
        <%= comment.body %>
    </div>
    <% if current_user.id == comment.user_id %>
        <div class="column is-1">
            <%= link_to post_comment_path({post_id: comment.post.id, id: comment}), method: :delete, title: 'Delete Comment' do %>
                <span class="icon">
                    <%= icon('fas', 'trash') %>
                </span>
            <% end %>
        </div>
    <% end %>
</div>