<div class="column is-2 m-1">
    <figure class="image is-48x48">
        <%= image_tag 'https://bulma.io/images/placeholders/48x48.png', alt: 'Placeholder Image', class: 'is-rounded' %>
    </figure>
</div>
<div class="column is-8 is-align-self-center">
    <% request = Comment.find(notification.notifiable_id) %>
    <p>
        <%= request.user.name %> commented on your post.
        <%= link_to 'View', post_path(request.post_id), class: 'button is-info is-small is-pulled-right is-outlined' %>
    </p>
</div>