<div class="columns">
  <div class="column is-10 is-offset-1 has-text-centered">
    <div class="box">
      <h3 class="is-size-3">Change your password</h3>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "New password", class: "label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input" %>
        </div>

        <div class="field">
          <p class="control">
            <%= f.label :password_confirmation, "Confirm new password", class: "label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
          </p>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: "button is-info" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
