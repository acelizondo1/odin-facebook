<%= form_with model: @post do |f| %>
    <div class="post columns box m-2">
        <div class="column is-2">
            <figure class="is-48x48 is-pulled-right">
                <%= image_tag 'https://bulma.io/images/placeholders/48x48.png', alt: 'Placeholder Image' %>
            </figure>
        </div>
        <div class="column is-10">
            <p class="is-size-6 mb-2"><%= current_user.name %></p>
            <div class="field">
                <div class="control">
                    <%= f.text_area :body, placeholder: "What's on your mind?", class: 'textarea is-small' %>
                </div>
            </div>
            <%= f.submit 'Post', class: 'button is-pulled-right is-link' %>
        </div>
    </div>
    
<% end %>